[
  {kernel, [
    {logger_level, warning},  %% Reduce noise during tests
    {logger, [
      {handler, console, logger_std_h,
        #{level => warning,
          config => #{type => standard_io},
          formatter => {logger_formatter, #{}}
        }
      }
    ]}
  ]},

  {bbsvx, [
    %% Minimal configuration for tests
    %% Most tests create local ontologies which don't need network config
  ]},

  {prometheus, [
    {prometheus_http, [{path, "/metrics"}, {format, auto}, {port, 10301}]}  %% Different port for tests
  ]},

  %% Disable OpenTelemetry for tests to avoid external dependencies
  {opentelemetry, [
    {traces_exporter, none}
  ]}
].
