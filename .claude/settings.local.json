{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",
      "Bash(export BUILD_WITHOUT_QUIC=true)",
      "Bash(rebar3 fmt:*)",
      "Bash(rebar3 compile:*)",
      "Bash(rebar3 edoc:*)",
      "Bash(rebar3 help:*)",
      "Bash(rebar3 eunit:*)",
      "Bash(rebar3 release:*)",
      "Bash(rebar3 shell:*)",
      "Bash(timeout 10s rebar3 shell:*)",
      "Bash(rebar3 clean:*)",
      "Bash(rebar3 ct --dir ct/bbsvx --suite bbsvx_ontology_actor_SUITE --group pending_transactions)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx start)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx stop)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx console)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx rpc application which_applications)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx eval \"application:which_applications().\")",
      "Bash(_build/default/rel/bbsvx/priv/bin/bbsvx-admin ping)",
      "Bash(_build/default/rel/bbsvx/bin/nodetool -name bbsvx@127.0.0.1 ping)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx rpc erlang get_cookie)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx-admin status)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx-admin help)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx help)",
      "Bash(_build/default/rel/bbsvx/bin/bbsvx config init --help)",
      "Bash(./bin/bbsvx:*)",
      "Bash(./priv/bin/bbsvx-admin ping:*)",
      "Bash(./bbsvx-admin status)",
      "Bash(./bbsvx admin status)",
      "Bash(BBSVX_BOOT=root ./bin/bbsvx start)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(diff:*)",
      "Bash(erlc:*)",
      "Bash(curl:*)",
      "Bash(docker compose:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker logs:*)",
      "Bash(docker exec:*)",
      "Bash(docker run:*)",
      "Bash(docker restart:*)",
      "Bash(docker build:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:www.erlang.org)"
    ],
    "deny": [],
    "ask": []
  }
}
